{
    "name": "ncrypt-site/php-sdk",
    "description": "PHP SDK for ncrypt.site",
    "keywords": [
        "ncrypt",
        "php",
        "sdk",
        "api"
    ],
    "homepage": "https://ncrypt.site",
    "license": "AGPL-3.0-or-later",
    "authors": [
        {
            "name": "Farshad Nematdoust",
            "homepage": "https://farshad.nematdoust.com"
        }
    ],
    "require": {
        "php": ">=7.1",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "guzzlehttp/guzzle": "^6.0",
        "ext-openssl": "*"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master",
        "phpunit/phpunit": "^9",
        "squizlabs/php_codesniffer": "~2.6",
        "friendsofphp/php-cs-fixer": "2.15.*"
    },
    "autoload": {
        "psr-4": { "NCrypt\\Client\\" : "lib/" }
    },
    "autoload-dev": {
        "psr-4": { "NCrypt\\Client\\" : "test/" }
    }
}
